@model IEnumerable<MyWebsite1.Models.Download>
@{
    ViewData["Title"] = "Downloads";
    ViewData["CurrentPage"] = "Downloads";
}
<div class="downloads-container mx-auto mt-4" style="max-width: 850px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Downloads</h2>
        <a asp-action="Create" class="btn btn-pink">
            <i class="fas fa-upload me-1"></i> Upload
        </a>
    </div>

    @if (!Model.Any())
    {
        <p>No downloads available.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                bool isImage = item.FileType?.StartsWith("image/") == true;
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="d-flex align-items-center text-decoration-none">
                        @if (isImage)
                        {
                            <img src="data:@item.FileType;base64,@Convert.ToBase64String(item.FileData)"
                                 alt="thumb" style="width: 60px; height: 60px; object-fit: cover; border-radius: 6px; margin-right: 15px;" />
                        }
                        <span class="fs-5">@item.Title</span>
                    </a>
                    @if (item.UserId == User.Identity.Name)
                    {
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="ms-2">
                            <button class="btn btn-outline-pink btn-sm" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    }
                </div>
            }
        </div>
    }
</div>
